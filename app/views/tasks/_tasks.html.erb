<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <div class="media-body">
        <div>
          <%= task.user.name %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          <p class="mb-0"><%= link_to task.id, task %> : <%= task.content %> &gt; <%= task.status %></p>
        </div>
        <div>
          <% if current_user == task.user %>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
            
            
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
</ul>